{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "module": "CommonJS",
      "types": ["jest", "node"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "jest.setup.js",
      "tests/**/*.ts",
      "tests/**/*.tsx"
    ]
  }