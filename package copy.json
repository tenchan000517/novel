{
  "name": "novel-automation-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=8192' next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' jest",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096' jest --watch",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' jest --coverage",
    "test:coverage:report": "NODE_OPTIONS='--max-old-space-size=4096' jest --coverage && open coverage/lcov-report/index.html",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPattern=tests/unit",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPattern=tests/integration",
    "test:e2e": "NODE_OPTIONS='--max-old-space-size=4096' playwright test",
    "test:performance": "NODE_OPTIONS='--max-old-space-size=4096' jest --testPathPattern=tests/performance",
    "test:all": "NODE_OPTIONS='--max-old-space-size=4096' jest && playwright test",
    "test:memory-safe": "NODE_OPTIONS='--max-old-space-size=2048' node"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@headlessui/react": "^2.2.2",
    "@octokit/rest": "^21.1.1",
    "@playwright/test": "^1.52.0",
    "axios": "^1.9.0",
    "bull": "^4.16.5",
    "class-variance-authority": "^0.7.1",
    "dotenv": "^16.5.0",
    "express-rate-limit": "^7.5.0",
    "ioredis": "^5.6.1",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.507.0",
    "next": "15.3.1",
    "node-fetch": "^2.7.0",
    "node-mocks-http": "^1.17.1",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.3",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.2",
    "typescript": "^5"
  }
}
